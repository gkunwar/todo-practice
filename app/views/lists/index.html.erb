<div class='row'><h1>Lists </h1><%= link_to "New List", new_list_path, style: 'float:right' %></div>


<div class="table-responsive">
  <table class="table">
    <thead>
    	<th  class="col-md-1">ID</th>
    	<th  class="col-md-3">Title</th>
        <th class="col-md-4">Image</th>
    	<th  class="col-md-4">Actions</th>
    </thead>
    <tbody>
    	<% @lists.each do |list| %>
	    	<tr class="<%= 'completed' if list.completed? %>" id="completed-<%= list.id %>">
	    		<td class="col-md-2"><%= list.id %></td>
	    		<td class="col-md-6"><%= list.title %></td>
                <td class="col-md-6"><%= image_tag list.avatar.url(:thumb) %></td>
	    		<td class="col-md-4"><%= link_to "Edit", edit_list_path(list) %> | <%= link_to "Delete", list_path(list),
            			data: {:confirm => 'Are you sure?'}, :method => :delete, remote: true %> | <%= link_to "Complete", complete_list_path(list), remote: true %></td> 
	    	</tr>
    	<%end%>
    </tbody>
  </table>
</div>
